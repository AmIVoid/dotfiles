# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = "i3bar"
  colors = true
  color_good = "#FFFFFF"
  color_degraded = "#FFFFFF"
  color_bad = "#ab325f"
}

order += "volume master"
order += "battery all"
order += "disk /"
order += "tztime local"

volume master {
 	format_muted = "Muted" 
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	format = "Vol: %volume"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "[%percentage}"
}

disk "/" {
        format = "Hentai folder: %avail"
}

tztime local {
	format = "%H:%M:%S"
}

